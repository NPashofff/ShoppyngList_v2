@model ShoppingList.Models.Data.Models.ShopList

@{
    ViewData["Title"] = "Details";
}

<h3>Shopping List Name: @Html.DisplayFor(model => model.Name)</h3>

<div>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
    </dl>
    <hr />
    @foreach (var category in Model.Categories)
    {
        <h5>@category.Name</h5>
        <a asp-action="AddCategory" class="btn btn-light" asp-route-shopListId="@Model?.Id">Add Product</a>
        <ul>
            @foreach (var x in Model.ListProducts)
            {
                <li>
                    <a asp-controller="ShoppingList" asp-action="SaveList" class="@(x.IsBought ? "btn btn-outline-success glyphicon glyphicon-ok" : "btn btn-outline-secondaryt")" asp-route-iss="@x.IsBought" asp-route-productId="@x.Id" asp-route-productCategoryId="@Model.Id">@x.Product.Name @(x.IsBought ? " ✅  Bought" : "")</a>
                </li>

            }
        </ul>
    }
</div>
<div>
    <a asp-action="AddCategory" class="btn btn-light" asp-route-shopListId="@Model?.Id">Add Category</a> |
    <a asp-action="Index" class="btn btn-light">Back to List</a>
</div>
